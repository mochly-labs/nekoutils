                        advanced_circuit_board: { icon: '💹', name: 'Placa de Circuito Avançada' },
                        amethyst_shard: { icon: '💠', name: 'Caco de Ametista' },
                        obsidian: { icon: '⬛', name: 'Obsidiana' },
